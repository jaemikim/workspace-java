package kr.co.himedia.loop;

//1 ~ 10까지의 합을 출력하시오.
public class ForTest03 {

	public static void main(String[] args) {
		
		int sum = 0;
		int count = 1;		
		
//		for (int i = 1; i <= 10; i++) {
//			sum += i;
//		}
		
		for (int i = 0; i < 10; i++) {
			sum += count;
			count++;
		}		
		System.out.println("합은 : " + sum);
		
		System.out.println("---------------------------------------");
		
		sum = 0;
		count = 1;
		
		/*
		 * for문의 문장들은 생략가능함
		 * 1) 초기화식 생략
		 * 	- 이미 이전에 값이 초기화 되어 For 내부에서 값을 저장할 필요가 없는 경우 
		 */
		
		int i = 0;
		
		for( ; i<10; i++, count++) {
			sum += count;			
		}
		System.out.println(sum);
	}
}
